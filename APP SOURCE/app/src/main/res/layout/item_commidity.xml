<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/little_margin_4">

                <TextView
                    android:id="@+id/card_main_1_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:text="2017-9-15" />

                <ImageView
                    android:id="@+id/card_main_1_iv_head_portrait"
                    android:layout_width="@dimen/head_portrait_horizontal"
                    android:layout_height="@dimen/head_portrait_vertical"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/panda" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_margin_4">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/big_image_horizontal"
                    android:layout_height="@dimen/big_image_vertical"
                    android:src="@drawable/iphone" />

                <ImageView
                    android:layout_width="@dimen/big_image_horizontal"
                    android:layout_height="@dimen/big_image_vertical"
                    android:src="@drawable/iphone" />

                <ImageView
                    android:layout_width="@dimen/big_image_horizontal"
                    android:layout_height="@dimen/big_image_vertical"
                    android:src="@drawable/iphone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_main_1_tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/card_main_1_intro"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>